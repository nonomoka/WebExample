<script id="common">
    //刷新
    $('#btnRefreshPlayList').on('click', function () {
        $(".loading-mask").show();
        getEList();
    })


    function getEList() {
        var data = {}
        var ajaxRequest = $.ajax({
            type: "POST",
            url: "@Url.Action("RefreshExecuteList", new { controller = "Home"})",
            dataType: "json",
            data: data,
            success: function (data) {
                if (data.Success) {
                    var cnt = data.ResultData.length;
                    if (cnt > 0) {
                        var tbody = '';
                        for (var i = 0; i < cnt; i++) {
                            tbody += '<tr>';
                            tbody += '<td>' + data.ResultData[i].MatchID + '</td>';
                            tbody += '<td>' + data.ResultData[i].TournamentZH + '</td>';
                            tbody += '<td>' + data.ResultData[i].Team1ZH + '</td>';
                            tbody += '<td>' + data.ResultData[i].Team2ZH + '</td>';
                            //tbody += '<td><div>' + '<button type="button" class="btn btn-danger">關閉</button>' + '</div></td>';
                            tbody += '</tr>';
                        }
                        $("#MatchesPlayList").find('tbody').html(tbody);
                        $("#MatchesPlayList").show();
                    }
                    else {
                        $("#MatchesPlayList").find('tbody').html('');
                        $("#MatchesPlayList").show();
                    }
                }
                else {
                    $("#MatchesPlayList").find('tbody').html('');
                    $("#MatchesPlayList").show();
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {

            },
            complete: function () {
                $(".loading-mask").hide();
            }
        })
    }

</script>

